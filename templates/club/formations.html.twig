<img src="{{ asset('img/octocat.gif') }}"
     alt="octocat" height="100px" width="100px">
<h1>La liste des formations de la classe {{ v1 }} dans la salle {{ v2 }}</h1>
{% if  listFormation is empty%}
<h6>Tableau vide</h6>
{% else %}
<table border="1">
    <tr>
        <td>Ref</td>
        <td>Titre</td>
        <td>Description</td>
        <td>N_P</td>
        <td>Participer</td>
    </tr>
    {% for f in listFormation %}
        {% if f.Description == "theorique" %}
        <tr>
            <td>{{ f.ref }}</td>
            <td>{{ f.Titre }}</td>
            <td>{{ f.Description }}</td>
            <td>{{ f.nb_participants }}</td>
            <td>
                {% if f.nb_participants == 0 %}
                <a href="{{ path('app_reservation') }}">Participer</a>
                {% else %}
                complet
                {% endif%}
            </td>
        </tr>
        {% endif %}
    {% endfor %}
    {% endif %}
</table>
<h3 style="color: red">Nb de formation = {{ listFormation|length }}</h3>
<h3 style="color: crimson">Total des participants : x</h3>
{% set x= 0 %}
nbr= {{ x }}
